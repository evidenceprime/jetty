[Unit]
Description=Jetty 9
Wants=network-online.target
After=network-online.target

[Service]
User=jetty
Group=jetty
ExecStart=/usr/bin/java -Djetty.home=<%= @home %> -Djetty.base=<%= @home %> -Djava.io.tmpdir=/tmp -jar <%= @home %>/start.jar -Dhttp.jetty.port=<%= @port %> <%= @additional_opts %>
PIDFile=<%= @jetty_pid %>
Restart=on-failure

[Install]
WantedBy=multi-user.target
